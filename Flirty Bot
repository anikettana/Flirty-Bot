import random
from telegram.ext import Updater, MessageHandler, Filters, CommandHandler

FLIRTY_LINES = [
    "Oh? Talking to me again? Someoneâ€™s feeling naughty ğŸ˜",
    "Carefulâ€¦ keep texting like that and I might start flirting back harder ğŸ˜‰",
    "Youâ€™re cute. Donâ€™t let it get to your head though ğŸ˜Œ",
    "Is your phone hot? Or is it just because you messaged me? ğŸ”¥",
    "Keep goingâ€¦ I like where this is headed ğŸ˜˜",
    "If flirting was a sport, youâ€™d be in the finals with me ğŸ˜",
]

def start(update, context):
    update.message.reply_text("Hey ğŸ˜˜ Iâ€™m your flirty bot. Say something and Iâ€™ll tease you back.")

def handle_message(update, context):
    text = update.message.text.lower()
    response = random.choice(FLIRTY_LINES)
    update.message.reply_text(response)

def main():
    TOKEN = 8369251958:AAEk15UhHLCyOf8KzzvIdbHPuTDIUPelef8

    updater = Updater(TOKEN, use_context=True)
    dp = updater.dispatcher

    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(MessageHandler(Filters.text & ~Filters.command, handle_message))

    updater.start_polling()
    updater.idle()

if __name__ == "__main__":
    main()
